@model NETD3202_F2022_InstrumentShop.Models.Manufacturer

@{
    ViewData["Title"] = "Delete";
}
<!-- The Title of the page-->
<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Manufacturer</h4>
    <hr />
    <dl class="row">
        <!-- Titles and Details from the Manufacturer-->
        <dt class="col-sm-2">
            Manufacturer Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt class="col-sm-2">
            Owner Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.owner)
        </dd>
        <dt class="col-sm-2">
            Phone Number
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.phone)
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.email)
        </dd>
        <dt class="col-sm-2">
            Address
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.address)
        </dd>
        <dt class="col-sm-2">
            City
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.city)
        </dd>
        <dt class="col-sm-2">
            Province
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.province)
        </dd>
        <dt class="col-sm-2">
            Postal Code
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.postalCode)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="manufacturerID" />
        <!-- Button to Confirm Delete-->
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <!-- Takes the user back to the index list-->
        <a asp-action="Index">Back to List</a>
    </form>
</div>
