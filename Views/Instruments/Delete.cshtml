@model NETD3202_F2022_InstrumentShop.Models.Instrument

@{
    ViewData["Title"] = "Delete";
}
<!-- The Title of the page-->
<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Instrument</h4>
    <hr />
    <dl class="row">
        <!-- Titles and Details from the Instrument-->
        <dt class="col-sm-2">
            Instrument Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt class="col-sm-2">
            Manufacturer ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.manufacturerID)
        </dd>
        <dt class="col-sm-2">
            Type
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.type)
        </dd>
        <dt class="col-sm-2">
            Color
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.color)
        </dd>
        <dt class="col-sm-2">
            Quantity Bought
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.quantityBought)
        </dd>
        <dt class="col-sm-2">
            Price Sold
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.priceSold)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="instrumentID" />
        <!-- Button to Confirm Delete-->
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <!-- Takes the user back to the index list-->
        <a asp-action="Index">Back to List</a>
    </form>
</div>
