@model NETD3202_F2022_InstrumentShop.Models.Repair

@{
    ViewData["Title"] = "Details";
}
<!-- The Title of the page-->
<h1>Details</h1>

<div>
    <h4>Repair</h4>
    <hr />
    <dl class="row">
        <!-- Titles and Details from the Repair-->
        <dt class="col-sm-2">
            Instrument Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.instrumentID)
        </dd>
        <dt class="col-sm-2">
            Owner Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.owner)
        </dd>
        <dt class="col-sm-2">
            Phone Number
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.phone)
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.email)
        </dd>
        <dt class="col-sm-2">
            Address
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.address)
        </dd>
        <dt class="col-sm-2">
            City
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.city)
        </dd>
        <dt class="col-sm-2">
            Province
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.province)
        </dd>
        <dt class="col-sm-2">
            Postal Code
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.postalCode)
        </dd>
    </dl>
</div>
<!-- Takes the user back to the index list or to edit-->
<div>
    <a asp-action="Edit" asp-route-id="@Model.repairID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
